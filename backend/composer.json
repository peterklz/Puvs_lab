{
    "name": "shopping-api/slim-implementation",
    "description": "Simple shopping list API using Slim Framework",
    "type": "project",
    "require": {
        "slim/slim": "^4.0",
        "slim/psr7": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 index.php"
    },
    "config": {
        "process-timeout": 0,
        "platform": {
            "php": "8.1"
        }
    }
}